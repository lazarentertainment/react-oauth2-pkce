{
  "name": "@lazarentertainment/react-oauth2-pkce",
  "version": "2.0.8",
  "description": "Authenticate against generic OAuth2 using PKCE",
  "author": "Gardner Bickford <gardner@bickford.nz>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lazarentertainment/react-oauth2-pkce.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "keywords": [
    "oauth2",
    "pkce"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepublish": "run-s build",
    "postversion": "git push && git push --tags",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.1.0",
    "@types/node": "~16.11.62",
    "@types/react": ">=17.0.0",
    "@types/react-dom": ">=17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "babel-eslint": "^10.0.3",
    "color-string": ">=1.9.1",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "immer": ">=9.0.0",
    "is-svg": ">=4.3.2",
    "jwt-decode": "^3.1.2",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react": ">=17.0.0",
    "react-dev-utils": ">=12.0.1",
    "react-dom": ">=17.0.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.8.4"
  },
  "files": [
    "dist"
  ]
}
